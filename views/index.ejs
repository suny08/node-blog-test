<%- include header %>
<% for(var post of posts){ %>
<p>
<h2>
    <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
        <%= post.title %>
    </a>
</h2>
</p>
<p class="info">
    作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
    日期：<%= post.time.minute %> |
    标签：
    <% for(var tag of post.tags){ %>
    <% if(tag){ %>
    <a href="/tags/<%= tag %>" class="tag"><%= tag %></a>
    <% } %>
    <% } %>
</p>
<p>
    <%- post.post %>
</p>
<p class="info">阅读:<%= post.pv %> | 评论:<%= post.comments.length %></p>
<% } %>
<%- include paging %>
<%- include footer %>
